<UserControl x:Class="MAAS_SFRThelper.Views.OptimizationView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:local="clr-namespace:MAAS_SFRThelper.Views"
            mc:Ignorable="d"
            d:DesignHeight="950" d:DesignWidth="900">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="250"/>
            </Grid.RowDefinitions>

            <!-- Structure Selection Section -->
            <GroupBox Grid.Row="1" 
                      Header="Structure Selection" 
                      Margin="0,0,0,10"
                      Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="Lattice (Peak):" 
                               VerticalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <ComboBox Grid.Row="0" Grid.Column="1"
                              ItemsSource="{Binding AvailableLatticeStructures}"
                              SelectedItem="{Binding SelectedLatticeStructure}"
                              Margin="0,0,0,10"
                              Height="25"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Valley (Low Dose):" 
                               VerticalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <ComboBox Grid.Row="1" Grid.Column="1"
                              ItemsSource="{Binding AvailableValleyStructures}"
                              SelectedItem="{Binding SelectedValleyStructure}"
                              Margin="0,0,0,10"
                              Height="25"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="PTV Structure:" 
                               VerticalAlignment="Center"
                               Visibility="{Binding PTVSelectionVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <Grid Grid.Row="2" Grid.Column="1"
                          Visibility="{Binding PTVSelectionVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0"
                                  ItemsSource="{Binding AvailablePTVStructures}"
                                  SelectedItem="{Binding SelectedPTVStructure}"
                                  Height="25"
                                  Margin="0,0,10,0"/>

                        <Button Grid.Column="1"
                                Content="Create Valley"
                                Command="{Binding CreateValleyStructureCommand}"
                                Height="25"
                                Width="100"
                                ToolTip="Create Valley structure (PTV - Lattice)"
                                Visibility="{Binding CreateValleyButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <!-- Geometric Analysis Section -->
            <GroupBox Grid.Row="2" 
          Header="Geometric Analysis" 
          Margin="0,0,0,10"
          Padding="10">
                <StackPanel>

                    <!-- Description -->
                    <TextBlock Text="Calculate geometric surrogate metrics (SII, VSI, SSI, OSI) to predict PVDR without dose calculation."
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"
                   FontStyle="Italic"
                   Foreground="Gray"/>

                    <!-- Test Extraction Button (keep existing) -->
                    <Button Content="Test Sphere Extraction" 
                Command="{Binding TestSphereExtractionCommand}"
                Width="160" 
                Height="30"
                HorizontalAlignment="Left"
                Margin="0,0,0,15"/>

                    <!-- OAR Selection - THIS IS WHERE YOU CHOOSE OARs -->
                    <TextBlock Text="Select OARs for Analysis:" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,5"/>

                    <Border BorderBrush="LightGray" 
                BorderThickness="1" 
                MaxHeight="100" 
                Margin="0,0,0,10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding AvailableOARs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}" 
                                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                      Margin="5,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>

                    <!-- Calculate Button -->
                    <Button Content="Calculate Geometric Metrics" 
                Command="{Binding CalculateGeometricMetricsCommand}"
                Width="200" 
                Height="30"
                HorizontalAlignment="Left"
                Margin="0,0,0,10"/>

                    <!-- Results Display -->
                    <TextBlock Text="Results:" 
                   FontWeight="SemiBold" 
                   Margin="0,5,0,5"/>

                    <Border BorderBrush="LightGray" 
                BorderThickness="1" 
                Background="#FFFAFAFA"
                Padding="10"
                MinHeight="80">
                        <TextBlock Text="{Binding GeometricResultsSummary, FallbackValue='Click Calculate Geometric Metrics to see results...'}"
                       FontFamily="Consolas"
                       FontSize="12"
                       TextWrapping="Wrap"/>
                    </Border>

                    <!-- Metric Explanations (collapsible) -->
                    <Expander Header="What do these metrics mean?" Margin="0,10,0,0" IsExpanded="False">
                        <StackPanel Margin="10,5,0,0">
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                    <Run FontWeight="SemiBold">SII (Sphere Independence Index):</Run>
                    <Run> How independently targetable each sphere is in beam's eye view. Higher = less overlap = better.</Run>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                    <Run FontWeight="SemiBold">VSI (Valley Shielding Index):</Run>
                    <Run> Fraction of target that is "valley" (not covered by spheres). Higher = more valley visible = lower valley dose.</Run>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                    <Run FontWeight="SemiBold">SSI (Sphere Spread Index):</Run>
                    <Run> 3D distribution quality (volume coverage + centroid alignment). Higher = better spread.</Run>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                    <Run FontWeight="SemiBold">OSI (OAR Sparing Index):</Run>
                    <Run> How well OARs avoid sphere projections. Higher = OAR stays in valley = better sparing.</Run>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap">
                    <Run FontWeight="SemiBold">Combined Score:</Run>
                    <Run> Weighted average of all metrics (equal weights by default).</Run>
                            </TextBlock>
                        </StackPanel>
                    </Expander>

                    <!-- ========== POSITION OPTIMIZATION SECTION ========== -->
                    <Separator Margin="0,15,0,15"/>

                    <TextBlock Text="Position Optimization" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Search for optimal X/Y offset to maximize combined score. Spheres outside the target or too close to OARs are automatically excluded."
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"
                               FontStyle="Italic"
                               Foreground="Gray"/>

                    <!-- Search Parameters -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="Search Range:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>

                        <TextBox Grid.Column="1"
                                 Text="{Binding GridSearchRangePercent, UpdateSourceTrigger=PropertyChanged}"
                                 Height="25"
                                 VerticalContentAlignment="Center"
                                 Margin="0,0,5,0"
                                 ToolTip="Search range as percentage of target radius"/>

                        <TextBlock Grid.Column="2" 
                                   Text="% of target" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>

                        <TextBlock Grid.Column="3" 
                                   Text="{Binding GridSearchRangeDisplay}" 
                                   VerticalAlignment="Center"
                                   Foreground="Gray"
                                   FontStyle="Italic"/>

                        <TextBlock Grid.Column="5" 
                                   Text="Steps:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>

                        <ComboBox Grid.Column="6"
                                  ItemsSource="{Binding AvailableGridSearchSteps}"
                                  SelectedItem="{Binding GridSearchSteps}"
                                  Height="25"
                                  ToolTip="Number of steps per axis (total positions = steps²)"/>
                    </Grid>

                    <!-- Run Grid Search Button -->
                    <Button Content="Run Grid Search" 
                            Command="{Binding RunGridSearchCommand}"
                            Width="150" 
                            Height="30"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,15"
                            ToolTip="Search for optimal X/Y offset position"/>

                    <!-- Grid Search Results -->
                    <TextBlock Text="Optimization Results:" 
                               FontWeight="SemiBold" 
                               Margin="0,5,0,5"/>

                    <Border BorderBrush="LightGray" 
                            BorderThickness="1" 
                            Background="#FFF5F5F5"
                            Padding="10"
                            MinHeight="100"
                            Margin="0,0,0,10">
                        <TextBlock Text="{Binding GridSearchResultsSummary}"
                                   FontFamily="Consolas"
                                   FontSize="11"
                                   TextWrapping="Wrap"/>
                    </Border>

                    <!-- Apply Buttons -->
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,0,0,10"
                                Visibility="{Binding HasGridSearchResults, Converter={StaticResource BooleanToVisibilityConverter}}">

                        <Button Content="Apply Best Overall"
                                Command="{Binding ApplyBestOverallCommand}"
                                Width="140"
                                Height="30"
                                Margin="0,0,10,0"
                                FontWeight="SemiBold"
                                ToolTip="Create new lattice at the best position (may have fewer spheres)"/>

                        </StackPanel>

                    <TextBlock Text="After applying, select the new lattice from the dropdown above, then proceed to Populate Objectives."
                               TextWrapping="Wrap"
                               Margin="0,5,0,0"
                               FontStyle="Italic"
                               Foreground="Gray"
                               Visibility="{Binding HasGridSearchResults, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                </StackPanel>
            </GroupBox>

            <!-- Unified Objectives Table -->
            <GroupBox Grid.Row="3" 
                      Header="Optimization Objectives (Peak, Valley, and OARs)" 
                      Margin="0,0,0,10"
                      Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Click 'Populate Objectives' below to fill this table. Edit as needed before creating in Eclipse."
                               FontStyle="Italic"
                               Margin="0,0,0,10"
                               TextWrapping="Wrap"/>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Objectives}"
                              SelectedItem="{Binding SelectedObjective}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              RowBackground="{Binding BackgroundColor}"
                              AlternatingRowBackground="{Binding BackgroundColor}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                              Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="Include" 
                                                    Binding="{Binding IsIncluded, UpdateSourceTrigger=PropertyChanged}" 
                                                    Width="60"/>
                            <DataGridTextColumn Header="Structure" 
                                                Binding="{Binding StructureName}" 
                                                Width="130"
                                                IsReadOnly="True"/>
                            <DataGridTemplateColumn Header="Obj Type" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ObjectiveType}" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox ItemsSource="{Binding DataContext.AvailableObjectiveTypes, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                  SelectedItem="{Binding ObjectiveType, UpdateSourceTrigger=PropertyChanged}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Upper/Lower" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Operator}" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsOperatorEnabled}" Value="False">
                                                            <Setter Property="Foreground" Value="Gray"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox ItemsSource="{Binding DataContext.AvailableOperators, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                  SelectedItem="{Binding Operator, UpdateSourceTrigger=PropertyChanged}"
                                                  IsEnabled="{Binding IsOperatorEnabled}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Dose (Gy)" 
                                                Binding="{Binding Dose, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="80"/>
                            <DataGridTextColumn Header="Vol (%)" 
                                                Binding="{Binding Volume, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="70"/>
                            <DataGridTextColumn Header="Priority" 
                                                Binding="{Binding Priority, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="70"/>
                            <DataGridTextColumn Header="Role" 
                                                Binding="{Binding Role}" 
                                                Width="60"
                                                IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <Button Content="Add Objective"
                                Command="{Binding AddObjectiveCommand}"
                                Width="120"
                                Height="25"
                                Margin="0,0,10,0"
                                ToolTip="Duplicate selected objective or add new blank objective"/>
                        <Button Content="Remove Selected"
                                Command="{Binding RemoveObjectiveCommand}"
                                Width="120"
                                Height="25"
                                Margin="0,0,10,0"/>
                        <Button Content="Reset to Defaults"
                                Command="{Binding ResetToDefaultsCommand}"
                                Width="120"
                                Height="25"
                                ToolTip="Clear all objectives"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="4"
                        Orientation="Horizontal"
                        Margin="0,0,0,10">
                <Button Content="Populate Objectives" 
                        Command="{Binding PopulateObjectivesCommand}"
                        Width="150" 
                        Height="35"
                        Margin="0,0,10,0"
                        ToolTip="Fill the table with Peak, Valley, and OAR objectives"/>

                <Button Content="Create Objectives" 
                        Command="{Binding CreateObjectivesCommand}"
                        Width="150" 
                        Height="35"
                        FontWeight="Bold"
                        ToolTip="Apply objectives from table to Eclipse plan"/>

            </StackPanel>

            <!-- Optimization Settings -->
            <GroupBox Grid.Row="5" 
                      Header="Optimization Settings" 
                      Margin="0,0,0,10"
                      Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Beam Selection -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Select Beams for Optimization:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,5"/>

                        <TextBlock Text="{Binding BeamWarningText}" 
                                   Foreground="OrangeRed" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"
                                   TextWrapping="Wrap"/>

                        <ScrollViewer MaxHeight="80" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding AvailableBeams}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected}" Margin="0,2">
                                            <CheckBox.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding BeamId}" Width="100" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Technique}" Width="100"/>
                                                    <TextBlock Text="{Binding Description}" Width="200"/>
                                                    <TextBlock Text=" ✓ VMAT" 
                                                               Foreground="Green" 
                                                               FontWeight="Bold"
                                                               Visibility="{Binding IsVMAT, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                </StackPanel>
                                            </CheckBox.Content>
                                        </CheckBox>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>

                    <!-- MLC and Options -->
                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="MLC:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding AvailableMLCs}"
                                  SelectedItem="{Binding SelectedMLC}"
                                  Height="25"
                                  Margin="0,0,20,0"/>

                        <CheckBox Grid.Column="2"
                                  Content="Use Intermediate Dose"
                                  IsChecked="{Binding UseIntermediateDose}"
                                  VerticalAlignment="Center"
                                  ToolTip="Calculate intermediate dose during optimization (recommended)"/>
                    </Grid>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <Button Content="Run Optimization"
                                Command="{Binding RunOptimizationCommand}"
                                Width="150"
                                Height="35"
                                FontWeight="Bold"
                                Margin="0,0,15,0"
                                ToolTip="Run VMAT optimization on selected beams"/>

                        <Button Content="Calculate Dose"
                                Command="{Binding CalculateDoseCommand}"
                                Width="150"
                                Height="35"
                                FontWeight="Bold"                                
                                ToolTip="Calculate dose after optimization (can take 1+ hour for SFRT plans)"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Validation Message -->
            <Border Grid.Row="6" 
                    Background="#FFFFEBCD" 
                    BorderBrush="#FFD2691E" 
                    BorderThickness="1" 
                    Padding="10"
                    Margin="0,0,0,10"
                    Visibility="{Binding ValidationVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="{Binding ValidationText}" 
                           Foreground="#FF8B0000"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"/>
            </Border>

            <!-- Progress Bar -->
            <ProgressBar Grid.Row="7" 
                         Height="20" 
                         Minimum="0" 
                         Maximum="100"
                         Value="{Binding ProgressValue}"
                         IsIndeterminate="{Binding IsOptimizing}"
                         Margin="0,0,0,10"/>

            <!-- Output Log -->
            <Border Grid.Row="8" 
                    BorderBrush="Gray" 
                    BorderThickness="1" 
                    Padding="5"
                    MinHeight="200">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding Output, Mode=OneWay}" 
                             FontFamily="Consolas" 
                             FontSize="12"
                             TextWrapping="Wrap"
                             IsReadOnly="True"
                             Background="White"
                             BorderThickness="0"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>